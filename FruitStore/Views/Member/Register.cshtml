@model Members

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Register</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <!--asp-for:display name on the label-->
            <label asp-for="MemberName"></label>
            <input asp-for="MemberName" class="form-control" />
            <span asp-validation-for="MemberName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="MemberEmail"></label>
            <input asp-for="MemberEmail" class="form-control" />
            <span asp-validation-for="MemberEmail" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="MemberAddress"></label>
            <input asp-for="MemberAddress" class="form-control" />
            <span asp-validation-for="MemberAddress" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="MemberPhone"></label>
            <input asp-for="MemberPhone" class="form-control" />
            <span asp-validation-for="MemberPhone" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="MemberPassword"></label>
            <input type="password" asp-for="MemberPassword" class="form-control" />
            <span asp-validation-for="MemberPassword" class="text-danger"></span>
            <label>密碼須包含大小寫英文字母和數字，長度介於 6 ~ 30 個字母之間</label>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="Member" asp-action="Login" class="btn btn-secondary" style="width:150px">
            Back to Login
        </a>
    </div>
</form>